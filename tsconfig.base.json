{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@srts.pw/server/environments": [
        "libs/server/environments/src/index.ts"
      ],
      "@srts.pw/server/core/typeorm": [
        "libs/server/core/typeorm/src/index.ts"
      ],
      "@srts.pw/server/core/graphql": [
        "libs/server/core/graphql/src/index.ts"
      ],
      "@srts.pw/server/common/typeorm": [
        "libs/server/common/typeorm/src/index.ts"
      ],
      "@srts.pw/server/urls": [
        "libs/server/urls/src/index.ts"
      ],
      "@srts.pw/client/environments": [
        "libs/client/environments/src/index.ts"
      ],
      "@srts.pw/client/services/core": [
        "libs/client/services/core/src/index.ts"
      ],
      "@srts.pw/client/components/header": [
        "libs/client/components/header/src/index.ts"
      ],
      "@srts.pw/client/pages/home": [
        "libs/client/pages/home/src/index.ts"
      ],
      "@srts.pw/client/pages/urls": [
        "libs/client/pages/urls/src/index.ts"
      ],
      "@srts.pw/client/types": [
        "libs/client/types/src/index.ts"
      ],
      "@srts.pw/client/pages/redirect": [
        "libs/client/pages/redirect/src/index.ts"
      ],
      "@srts.pw/client/components/create-link": [
        "libs/client/components/create-link/src/index.ts"
      ],
      "@srts.pw/client/components/link-preview": [
        "libs/client/components/link-preview/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
